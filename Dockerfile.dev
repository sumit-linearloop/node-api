FROM node:14
WORKDIR /app
RUN apt-get update && \
    apt-get install -y awscli && \
    rm -rf /var/lib/apt/lists/*
COPY package*.json ./
RUN npm install
COPY . .
RUN aws s3 cp s3://dmakindia/env/.env.DEV .env
ENV NODE_ENV=development
EXPOSE 1400
CMD ["npm", "start"]
