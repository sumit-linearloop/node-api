FROM node:18
RUN apt-get update && \
    apt-get install -y awscli jq
RUN mkdir -p /secrets
WORKDIR /usr/src/app
COPY package*.json ./
RUN npm install
COPY . .
COPY 1.sh /1.sh
RUN chmod +x /1.sh
ENTRYPOINT ["sh", "-c", "/1.sh && npm start"]










 
