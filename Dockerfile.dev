FROM node:18
WORKDIR /usr/src/app
COPY package*.json ./
RUN npm install
COPY . .
RUN npm install aws-sdk dotenv
EXPOSE 1400
ENV AWS_REGION=us-east-1
CMD ["node", "index.js"]
 
