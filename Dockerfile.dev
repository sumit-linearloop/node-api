FROM node:18
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY . .
RUN apt-get update && \
    apt-get install -y awscli && \
    rm -rf /var/lib/apt/lists/*
COPY 1.sh .
RUN chmod +x start-app.sh
EXPOSE 3000
CMD ["./1.sh"]











 
